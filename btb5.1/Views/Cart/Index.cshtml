@model List<btb5._1.Models.CartItem>

<h2>Giỏ hàng của bạn</h2>

@if (Model.Count == 0)
{
    <p>Giỏ hàng của bạn trống.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Tổng cộng</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>
                        <input 
                            type="number" 
                            value="@item.Quantity" 
                            min="1" 
                            class="form-control update-cart" 
                            data-product-id="@item.ProductId" 
                            style="width: 70px; display: inline-block;" />
                    </td>
                    <td>@item.Price.ToString("C")</td>
                    <td class="item-total">@item.Total.ToString("C")</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p><strong>Tổng cộng: </strong> <span id="cart-total">@Model.Sum(i => i.Total).ToString("C")</span></p>
    <a href="/Checkout" class="btn btn-success">Thanh toán</a>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Khi số lượng thay đổi
        $(".update-cart").on("change", function () {
            var productId = $(this).data("product-id");
            var quantity = $(this).val();

            // Gửi yêu cầu AJAX để cập nhật giỏ hàng
            $.ajax({
                url: '@Url.Action("UpdateCart", "Cart")',
                type: 'POST',
                data: {
                    productId: productId,
                    quantity: quantity
                },
                success: function (response) {
                    if (response.success) {
                        // Cập nhật tổng cộng cho sản phẩm
                        $(`.update-cart[data-product-id='${productId}']`)
                            .closest("tr")
                            .find(".item-total")
                            .text(response.itemTotal);

                        // Cập nhật tổng cộng của giỏ hàng
                        $("#cart-total").text(response.cartTotal);
                    } else {
                        alert("Đã xảy ra lỗi khi cập nhật giỏ hàng.");
                    }
                },
                error: function () {
                    alert("Không thể cập nhật giỏ hàng. Vui lòng thử lại.");
                }
            });
        });
    });
</script>
