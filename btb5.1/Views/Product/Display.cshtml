<div class="product-details-container">
    <div class="product-header">
        <h2 class="product-title">@Model.Name</h2>
        <h3 class="product-price">Sell Price: @Model.SellPrice.ToString("C")</h3>
    </div>

    <div class="product-content">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="product-image-wrapper">
                <img src="@Model.ImageUrl" alt="Product Image" class="product-image" />
            </div>
        }

        <p class="product-description">@Model.Description</p>
    </div>

    <div class="product-actions">
        <a asp-action="Index" class="btn btn-back">Quay về</a>
    </div>
</div>
